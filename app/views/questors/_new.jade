section(data-bind='if: $root.isCurrentPage("new_questors")')
  h2 Choose 
    span(data-bind='text: quest().current().numPlayersNeeded')
    | &nbsp;players for this quest
  
  .row
    section.col-sm-4
      h3 Not going
      select#nonquestors(
        size='10'
        data-bind='options: game().nonquestors,\
          optionsText: "name",\
          optionsValue: "_id"'
      )
    
    .move-btns.col-sm-1
      button.btn.btn-move(
        type='button'
        data-bind='click: quest().addQuestors,\
          disable: quest().hasEnoughQuestors'
      )
        span(aria-hidden='true') &raquo;
        span.sr-only Add questor
      
      button.btn.btn-move(
        type='button'
        data-bind='click: quest().removeQuestors'
      )
        span(aria-hidden='true') &laquo;
        span.sr-only Remove questor
    
    section.col-sm-offset-3.col-sm-4
      h3 Going
      select#questors(
        size='10'
        data-bind='options: quest().current().players,\
          optionsText: "name",\
          optionsValue: "_id"'
      )
  
  input.quest-vote#king-quest-approve(
    type='radio'
    name='king-quest-vote'
    value='approve'
  )
  label(for='king-quest-approve') Approve
  
  input.quest-vote#king-quest-reject(
    type='radio'
    name='king-quest-vote'
    value='reject'
  )
  label(for='king-quest-reject') Reject
  
  .has-error(data-bind='if: quest().hasError')
    .help-block(data-bind='text: quest().error')
  
  button.btn.btn-default(
    type='button'
    data-bind='click: quest().confirmStart'
  ) Finalize
