section(data-bind='visible: $root.nav().isCurrentPage("new_characters")')
  h2 Choose characters
  
  .row
    section.col-sm-6
      h3
        span(data-bind='text: character().numBad')
        | &nbsp;bad guys
      
      ul.character-list.list-group
        - for (var i = 0; i < 3; ++i)
          +characterCheckbox('bad' + (i + 1), 'bad', true)
        +characterCheckbox('assassin', 'bad', false)
    
    section.col-sm-6
      h3
        span(data-bind='text: character().numGood')
        | &nbsp;good guys
      
      ul.character-list.list-group
        - for (var i = 0; i < 5; ++i)
          +characterCheckbox('good' + (i + 1), 'good', true)
        +characterCheckbox('merlin', 'good', false)
  
  button.btn.btn-default#create-characters-btn(
    type='button'
    data-bind='click: character().create'
    disabled
  ) Done
